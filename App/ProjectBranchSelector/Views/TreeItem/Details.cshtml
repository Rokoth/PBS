@using ProjectBranchSelector.Models;
@model TreeItemModel

@{
    ViewData["Title"] = "Элемент дерева";    
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>NodeModel</h4>
    <hr />
    @Html.HiddenFor(model => model.Id)
<dl class="row">
    <dt class="col-sm-2">
        Наименование
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Name)
    </dd>
    <dt class="col-sm-2">
        Описание
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Description)
    </dd>
    <dt class="col-sm-2">
        Дерево
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Tree.Name)
    </dd>
    <dt class="col-sm-2">
        Родитель
    </dt>
    <dd class="col-sm-10">
        @if (Model.Parent != null)
        {
            @Html.DisplayFor(model => model.Parent.Name)
        }
    </dd>
</dl>
</div>
<div>
    @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Вернуться", "Index")
</div>
