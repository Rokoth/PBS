@model ProjectBranchSelector.Models.FormulaModel

@{
    ViewData["Title"] = "Добавить";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>   
    <a asp-action="Index" asp-controller="Home" class="btn btn-dark">Отмена</a>
</div>

@section scripts
{
    <script type="text/javascript">

        function setFormula(formula_id, formula) {
            $("#formula_id").text(formula_id);
            $("#formula").text(formula);
        }

        $(function () {
            $.ajaxSetup({ cache: false });
            $("#formula_select").click(function (e) {
                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        })
    </script>
}