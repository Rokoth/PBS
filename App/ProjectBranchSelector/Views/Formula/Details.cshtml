@using ProjectBranchSelector.Models;
@model FormulaModel
@{
    ViewData["Title"] = "Формула";
}

<div class="container">
    <h4>@ViewData["Title"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsDefault)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsDefault)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id }, new { @class = "btn btn-dark" }) |
    @Html.ActionLink("История", "Index", "History", new { id = Model.Id }, new { @class = "btn btn-dark" }) |    
    <a asp-action="Index" asp-controller="Home">Вернуться</a>
</div>

@section Scripts {
    <script src="~/js/project_details.js" asp-append-version="true"></script>

}