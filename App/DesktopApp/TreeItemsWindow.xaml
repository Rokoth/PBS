<Window x:Class="DesktopApp.TreeItemsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopApp"
        mc:Ignorable="d"
        Title="Элементы дерева" Height="600" Width="1024">
    <Grid>
        <TreeView x:Name="TreeItemsView" HorizontalAlignment="Stretch" Margin="5,30,5,40" VerticalAlignment="Stretch" BorderThickness="2" BorderBrush="Black"/>
        <Button x:Name="CloseButton" Content="Выход" HorizontalAlignment="Right" Margin="0,0,5,5" VerticalAlignment="Bottom" Width="75" Click="CloseButton_Click"/>
        <Button x:Name="AddButton" Content="Добавить" HorizontalAlignment="Right" Margin="0,0,85,5" VerticalAlignment="Bottom" Width="75" Click="AddButton_Click"/>
        <Label x:Name="TreeLabel" Content="" HorizontalAlignment="Stretch" Margin="5,5,5,0" VerticalAlignment="Top" Height="25"/>
    </Grid>
</Window>
